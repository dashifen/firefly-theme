<!doctype html>
<!--suppress HtmlRequiredLangAttribute -->
<html class="no-js" {{ function('language_attributes') }}>
<head>
  <title>{{ post.title ? post.title ~ " | " : "" }} {{ site.title }}</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  {{ function('wp_head') }}
</head>
<body {{ function('body_class') }}>
<div class="container">
  <a href="#content" class="screen-reader-text">Skip to the Content</a>
  <a href="/" class="no-js-menu-link screen-reader-text">Go to the Main Menu</a>
  <header id="banner" class="banner" aria-labelledby="page-title">
    <a href="{{ site.url }}">
      <img src="{{ site.logo.src }}" alt="{{ site.logo.alt }}" class="logo">
      <h1 id="page-title" class="h1">The Firefly House</h1>
    </a>

    <menu-toggle></menu-toggle>
    {% include '@partials/menu.twig' with {
      'id': 'main-menu',
      'label': 'main menu',
      'items': site.menus.main
    } only %}

    <figure class="banner-graphic" role="presentation">
      <!--suppress HtmlUnknownTarget -->
      <img src="{{ site.banner.src }}" alt="{{ site.banner.alt }}">
    </figure>
  </header>

  <div id="body">
    <main id="content" class="main" aria-labelledby="main-title">
      {% block content %}
      {% endblock %}
    </main>
    <section class="sidebar" aria-label="sidebar">
      {% block sidebar %}
      {% endblock %}
    </section>
  </div>

  <footer class="footer">
    <div class="footer-container">
      <div class="footer-content">
        <p>&copy; {{ year }} The Firefly House</p>

        <p>
          <a href="https://discord.gg/{{ discord.invite }}" class="discord">
            {% if discord.online > 0 %}
              Join {{ discord.online }} of us on <img src="{{ discord.logo }}" alt="discord">
            {% else %}
              Join our <img src="{{ discord.logo }}" alt="discord">
            {% endif %}
          </a>
        </p>
      </div>
      {% include '@partials/menu.twig' with {
        'id': 'footer-menu',
        'label': 'footer menu',
        'items': site.menus.footer
      } only %}
    </div>
  </footer>
</div>

{{ function('wp_footer') }}
</body>
</html>
